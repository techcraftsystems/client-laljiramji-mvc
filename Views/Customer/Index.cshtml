@model System.Collections.Generic.List<Client.Models.Customers>;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "Customers";
}

<link href="~/lib/data-tables/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet">
<script src="~/lib/data-tables/js/jquery.dataTables.min.js"></script>
<script src="~/js/customers-index-script.js"></script>

<style>
    select {
        display: initial;
        height: 2rem;
        width: auto;
    }

    .dataTables_wrapper .dataTables_filter input {
        margin-left: 0;
        height: 2rem !important;
    }

    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        margin-top: -60px;
    }

    .alight-right {
        text-align: right;
    }

    h3 {
        margin: 1.46rem 0 0 0;
    }
    table a {
        color: #333;
    }
    table a:hover {
        color: #00adef;
    }
    table tr.group {
        color: dodgerblue;
    }
</style>

<h3 class="header">Customers Module</h3>

<div class="col s12">
    <table id="customers-table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>CUSTOMER</th>
                <th>STATION</th>
                <th>STATION</th>
                <th>CONTACTS</th>
                <th>PHONE</th>
                <th>KRA PIN</th>
                <th>BALANCE</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>CUSTOMER</th>
                <th>STATION</th>
                <th>STATION</th>
                <th>CONTACTS</th>
                <th>PHONE</th>
                <th>KRA PIN</th>
                <th>BALANCE</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td><a href="/customers/@cust.Id">@cust.Name</a></td>
                    <td><a>@HttpContextAccessor.HttpContext.User.Identity.Name</a></td>
                    <td class="red-text">STATION NAME :: <b>@HttpContextAccessor.HttpContext.User.Identity.Name.ToUpper()</b></td>
                    <td>@cust.Contacts</td>
                    <td>@cust.Telephone</td>
                    <td>@cust.KraPin</td>
                    <td class="right-align">@string.Format("{0:N}", cust.Balance)</td>
                </tr>
            }
        </tbody>
    </table>
</div>